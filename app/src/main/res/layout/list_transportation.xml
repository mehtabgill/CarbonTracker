<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background_border_green">

    <ImageView
        android:id="@+id/imageView_list_transportation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/textView_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_list_transportation_icon"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_toEndOf="@+id/space"
        android:layout_toRightOf="@+id/space"
        android:text="Type"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@+id/textView_type"
        android:layout_alignLeft="@+id/textView_type"
        android:layout_alignStart="@+id/textView_type" />

    <TextView
        android:id="@+id/textView_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:text="Make"
        android:layout_alignBaseline="@+id/textView_name"
        android:layout_alignBottom="@+id/textView_name"
        android:layout_toRightOf="@+id/textView_name"
        android:layout_toEndOf="@+id/textView_name" />

    <TextView
        android:id="@+id/textView_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_above="@+id/textView_year"
        android:layout_toRightOf="@+id/textView_make"
        android:layout_toEndOf="@+id/textView_make" />

    <TextView
        android:id="@+id/textView_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Year"
        android:layout_below="@+id/imageView_list_transportation_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_year"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/imageView_list_transportation_icon"
        android:layout_toRightOf="@+id/imageView_list_transportation_icon"
        android:id="@+id/space" />
</RelativeLayout>