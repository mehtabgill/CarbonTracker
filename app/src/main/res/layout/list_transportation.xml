<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background_border_green">

    <ImageView
        android:id="@+id/imageView_list_transportation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="22dp"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/textView_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView_list_transportation_icon"
        android:layout_toEndOf="@+id/imageView_list_transportation_icon"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_type"
        android:layout_alignStart="@+id/textView_type"
        android:layout_below="@+id/textView_type"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <TextView
        android:id="@+id/textView_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_type"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_toEndOf="@+id/textView_type"
        android:layout_toRightOf="@+id/textView_type" />

    <TextView
        android:id="@+id/textView_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_make"
        android:layout_toEndOf="@+id/textView_make"
        android:layout_toRightOf="@+id/textView_make" />

    <TextView
        android:id="@+id/textView_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView_model"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_year"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/imageView_list_transportation_icon"
        android:layout_toRightOf="@+id/imageView_list_transportation_icon" />
</RelativeLayout>