<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.cmpt276.carbontracker.UI.MainMenuActivity">

    <Button
        android:id="@+id/viewCarbonFootprintButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_delete_utility_buitton"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/view_carbon_footprint_button"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/edit_delete_utility_buitton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_View_Journey"
        android:layout_alignRight="@+id/btn_View_Journey"
        android:layout_below="@+id/btn_View_Journey"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="@string/view_utilities_bill_button"
        android:textColor="@color/emerald"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_View_Journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/view_journey"
        android:textColor="@color/white"
        android:textSize="20dp" />

    //comment in to be commit-able
</RelativeLayout>


