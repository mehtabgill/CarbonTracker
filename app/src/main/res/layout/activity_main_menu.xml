<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.cmpt276.carbontracker.UI.MainMenuActivity">

    <Button
        android:id="@+id/createJourneyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:text="@string/create_journey_button"
        />

    <Button
        android:id="@+id/viewCarbonFootprintButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_carbon_footprint_button"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/edit_delete_utility_buitton"
        android:layout_alignRight="@+id/create_utility_bill_button"
        android:layout_alignEnd="@+id/create_utility_bill_button" />

    <Button
        android:id="@+id/create_utility_bill_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_utilities_bill_button"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/createJourneyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/edit_delete_utility_buitton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_utilities_bill_button"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/btn_View_Journey"
        android:layout_alignLeft="@+id/viewCarbonFootprintButton"
        android:layout_alignStart="@+id/viewCarbonFootprintButton" />

    <Button
        android:id="@+id/btn_View_Journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_journey"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/create_utility_bill_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_delete_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/delete_all_data"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/settings" />
    //comment in to be commit-able
</RelativeLayout>


