<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.cmpt276.carbontracker.UI">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity" android:parentActivityName=".WelcomeScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomeScreenActivity"/>
        </activity>

        <activity android:name=".SelectTransportationMode"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenuActivity"/>
        </activity>


        <activity android:name=".CarSelectionActivity" android:parentActivityName=".SelectTransportationMode">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SelectTransportationMode"/>
        </activity>

        <activity android:name=".ViewCarbonFootprintActivity" />
        <activity android:name=".SelectRouteActivity" />
        <activity android:name=".AddRouteActivity" />
        <activity android:name=".EditRouteActivity" />
        <activity android:name=".DeleteRouteActivity" />
        <activity android:name=".AddCarActivity" />
        <activity android:name=".EditDeleteCarActivity" />
        <activity android:name=".AddUtilitiesBillActivity" />
        <activity android:name=".EditDeleteUtilitiesActivity" />
        <activity
            android:name=".TipsActivity"
            android:theme="@style/AppTheme.popUpWindowTheme" />
        <activity android:name=".ViewJourneyActivity" />
        <activity android:name=".EditJourneyActivity" />
        <activity android:name=".OptionsActivity"></activity>
        <service
            android:name=".Notifications"
            android:exported="false">
        </service>
    </application>

</manifest>